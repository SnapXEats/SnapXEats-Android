<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_dimens_5"
            android:src="@drawable/close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimens_200"
                android:layout_marginTop="@dimen/dimen_70"
                android:background="@drawable/ic_restaurant_placeholder" />

            <LinearLayout
                android:id="@+id/layout_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dimens_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_15"
                    android:src="@drawable/ic_info" />

                <ImageView
                    android:id="@+id/img_text_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_15"
                    android:src="@drawable/ic_text_review" />

                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_15"
                    android:src="@drawable/ic_audio_speaker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_10"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="@dimen/common_dimens_10"
                        android:src="@drawable/ic_dir_share" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_margin="@dimen/common_dimens_10">

                <TextView
                    android:id="@+id/txt_rest_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_rest_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginTop="@dimen/common_dimens_5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/more_info"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginTop="@dimen/common_dimens_5"/>
                <ListView
                    android:id="@+id/list_aminities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_margin="@dimen/common_dimens_10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_review"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_review_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_dimens_5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_margin="@dimen/common_dimens_10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_review"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_14"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_play_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_review"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/common_dimens_30"/>
                    <TextView
                        android:id="@+id/timer_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.22"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/common_dimens_10"
                        android:layout_marginTop="@dimen/common_dimens_10"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
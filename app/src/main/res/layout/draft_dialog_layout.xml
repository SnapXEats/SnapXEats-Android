<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/common_dimens_30"
            android:layout_height="@dimen/common_dimens_30"
            android:padding="@dimen/common_dimens_5"
            android:src="@drawable/close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimens_200"
                android:layout_marginTop="@dimen/dimens_50dp"
                android:background="@drawable/ic_restaurant_placeholder" />

            <LinearLayout
                android:id="@+id/layout_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dimens_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_15"
                    android:src="@drawable/ic_info" />

                <ImageView
                    android:id="@+id/img_text_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_15"
                    android:src="@drawable/ic_text_review" />

                <ImageView
                    android:id="@+id/img_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_15"
                    android:src="@drawable/ic_audio_speaker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/common_dimens_10"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:padding="@dimen/common_dimens_10"
                        android:src="@drawable/ic_dir_share"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_download"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>

            <!--Description layout-->
            <LinearLayout
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimens_200"
                android:orientation="vertical"
                android:visibility="gone">

                <!--Information layout-->
                <LinearLayout
                    android:id="@+id/layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_dimens_10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_rest_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/restaurant_name"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_rest_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_dimens_5"
                        android:text="@string/address" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_dimens_5"
                        android:text="@string/more_info"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <ListView
                        android:id="@+id/list_aminities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--Review layout-->
                <LinearLayout
                    android:id="@+id/layout_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_dimens_10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_review"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_review_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_5" />
                </LinearLayout>

                <!--Audio layout-->
                <LinearLayout
                    android:id="@+id/layout_audio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/common_dimens_10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_review"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_play_audio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/common_dimens_30"
                            android:src="@drawable/ic_play_review"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/timer_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/common_dimens_10"
                            android:layout_marginTop="@dimen/common_dimens_10"
                            android:text="@string/audio_init_time"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/text_size_16" />
                    </LinearLayout>
                </LinearLayout>

                <!--Downloaded layout-->
                <LinearLayout
                    android:id="@+id/layout_download_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dimens_60"
                        android:layout_height="@dimen/dimens_60"
                        android:layout_gravity="center_vertical|center"
                        android:src="@drawable/ic_download_success"
                        android:layout_marginTop="@dimen/common_dimens_20"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_dimens_5"
                        android:gravity="center_horizontal"
                        android:text="@string/successful"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        android:theme="@style/TextViewStyle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_dimens_10"
                        android:layout_marginTop="@dimen/common_dimens_10"
                        android:gravity="center_horizontal"
                        android:text="@string/download_success_msg"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
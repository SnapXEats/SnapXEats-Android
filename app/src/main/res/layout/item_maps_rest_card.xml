<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/map_cardview_width"
    android:layout_height="@dimen/map_cardview_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/common_dimens_5"
    android:layout_marginLeft="@dimen/common_dimens_5"
    android:layout_marginRight="@dimen/common_dimens_5"
    android:layout_marginTop="@dimen/common_dimens_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_rest_maps"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_card_img_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_rest_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_10"
            android:layout_marginTop="@dimen/common_dimens_5"
            android:textColor="@color/colorCuisine"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_dimens_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_price_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/common_dimens_10"
                android:textColor="@color/colorCuisine"
                android:textSize="@dimen/txt_size_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/common_dimens_10"
                android:layout_marginStart="@dimen/common_dimens_10"
                android:src="@drawable/ic_dot" />

            <TextView
                android:id="@+id/txt_distance_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCuisine"
                android:textSize="@dimen/txt_size_12" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.snapxeats.ui.directions.DirectionsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_directions"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingRight="@dimen/common_dimens_5"
        app:theme="@style/ToolBarTheme"
        android:elevation="@dimen/dimens_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Directions"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_16"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/img_dir_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/common_dimens_20"
            android:src="@drawable/ic_dir_share" />
    </android.support.v7.widget.Toolbar>
</LinearLayout>

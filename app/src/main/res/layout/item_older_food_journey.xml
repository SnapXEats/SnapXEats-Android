<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_80dp"
    android:layout_marginLeft="@dimen/common_dimens_15"
    android:layout_marginRight="@dimen/common_dimens_15"
    android:layout_marginTop="@dimen/common_dimens_10"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    card_view:elevation="@dimen/common_dimens_5">

    <LinearLayout
        android:id="@+id/layout_item_journey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_dimens_10">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="@dimen/common_dimens_5"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_dimens_2"
                android:text="@string/restaurant_name"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_dimens_2"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/img_reward_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:src="@drawable/ic_audio_pause" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimens_50dp"
        android:layout_height="@dimen/dimens_50dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/common_dimens_20"
        android:background="@drawable/circle_rewards"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_reward_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_audio_pause"
            android:text="@string/points"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_size_8" />
    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:mContext="com.snapxeats.ui.preference1.NavPreferenceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/common_dimens_10">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_hamburger_menu" />

            <TextView
                android:layout_width="@dimen/dimen_250"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dimens_40dp"
                android:text="Preference"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="@dimen/common_dimens_10"
                android:text="@string/apply"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_20" />
        </android.support.v7.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Location layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_10"
                        android:text="@string/location"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_12"
                        android:theme="@style/TextViewStyle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/common_dimens_20"
                            android:src="@drawable/ic_cuisine_marker" />

                        <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_dimens_5"
                            android:ellipsize="end"
                            android:text="@string/select_location"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>

                <!--Ratings layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_10"
                        android:text="@string/ratings"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_12"
                        android:theme="@style/TextViewStyle" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_15">

                        <LinearLayout
                            android:id="@+id/layout_rating_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/common_dimens_15">

                            <View
                                android:id="@+id/view_rating_three"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/common_dimens_2"
                                android:layout_marginBottom="@dimen/common_dimens_10" />

                            <RatingBar
                                android:id="@+id/rating_bar_three"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/common_dimens_5"
                                android:numStars="3" />

                            <TextView
                                android:id="@+id/txt_rating_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/three_stars"
                                android:textColor="@color/text_color_primary" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.04" />

                        <LinearLayout
                            android:id="@+id/layout_rating_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/common_dimens_15">

                            <View
                                android:id="@+id/view_rating_four"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/common_dimens_2"
                                android:layout_marginBottom="@dimen/common_dimens_10" />

                            <RatingBar
                                android:id="@+id/rating_bar_four"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/common_dimens_5"
                                android:numStars="4" />

                            <TextView
                                android:id="@+id/txt_rating_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/four_stars"
                                android:textColor="@color/text_color_primary" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.04" />

                        <LinearLayout
                            android:id="@+id/layout_rating_five"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/common_dimens_15">

                            <View
                                android:id="@+id/view_rating_five"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/common_dimens_2"
                                android:layout_marginBottom="@dimen/common_dimens_10" />

                            <RatingBar
                                android:id="@+id/rating_bar_five"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/common_dimens_5"
                                android:numStars="5" />

                            <TextView
                                android:id="@+id/txt_rating_five"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/five_stars"
                                android:textColor="@color/text_color_primary" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--Pricing layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_10"
                        android:text="@string/pricing"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_12"
                        android:theme="@style/TextViewStyle" />

                    <co.ceryle.segmentedbutton.SegmentedButtonGroup
                        android:id="@+id/sbg_pricing"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dimens_15"
                        android:layout_margin="@dimen/common_dimens_10"
                        app:sbg_backgroundColor="@color/pref_slider_background"
                        app:sbg_borderColor="@color/pref_slider_background"
                        app:sbg_borderSize="@dimen/common_dimens_1"
                        app:sbg_draggable="true"
                        app:sbg_position="0"
                        app:sbg_radius="@dimen/common_dimens_10"
                        app:sbg_dividerRadius="@dimen/common_dimens_10"
                        app:sbg_selectorColor="@color/pref_slider_foreground">

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_btn_one"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_btn_two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_btn_three"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4"/>

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_btn_four"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_dimens_10">

                        <TextView
                            android:id="@+id/seg_txt_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="$"
                            android:textColor="@color/pref_txt_selected_color"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="$$"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="$$$"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="$$$$"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                </LinearLayout>

                <!--Distance layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_10"
                        android:text="@string/distance"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_12"
                        android:theme="@style/TextViewStyle" />

                    <co.ceryle.segmentedbutton.SegmentedButtonGroup
                        android:id="@+id/sbg_distance"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_dimens_15"
                        android:layout_margin="@dimen/common_dimens_10"
                        app:sbg_backgroundColor="@color/pref_slider_background"
                        app:sbg_borderColor="@color/pref_slider_background"
                        app:sbg_borderSize="@dimen/common_dimens_1"
                        app:sbg_draggable="true"
                        app:sbg_position="0"
                        app:sbg_radius="@dimen/common_dimens_10"
                        app:sbg_selectorColor="@color/pref_slider_foreground">

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_distance_auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_distance_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_distance_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_distance_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_distance_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                        <co.ceryle.segmentedbutton.SegmentedButton
                            android:id="@+id/seg_distance_five"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/common_dimens_4" />

                    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/common_dimens_10">

                        <TextView
                            android:id="@+id/seg_txt_auto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="@string/auto"
                            android:textColor="@color/pref_txt_selected_color"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_distance_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="1"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_distance_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="2"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_distance_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="3"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_distance_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="4"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/seg_txt_distance_five"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="5"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>

                </LinearLayout>


                <!--Sort by layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/common_dimens_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_10"
                        android:text="@string/sort_by"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_12"
                        android:theme="@style/TextViewStyle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_5"
                        android:weightSum="1">

                        <RadioGroup
                            android:id="@+id/radio_group_sort_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_distance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/distance" />

                            <RadioButton
                                android:id="@+id/radio_ratings"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/ratings" />
                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>

                <!--Set by preferences layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_dimens_10"
                        android:text="@string/set_preferences"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_12"
                        android:theme="@style/TextViewStyle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_margin="@dimen/common_dimens_10"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/common_dimens_10">

                                <ImageView
                                    android:layout_width="@dimen/common_dimens_20"
                                    android:layout_height="@dimen/common_dimens_20"
                                    android:layout_above="@+id/txt_cuisine"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_cuisine"
                                    />

                                <TextView
                                    android:id="@+id/txt_cuisine"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:padding="@dimen/common_dimens_5"
                                    android:text="@string/cuisines"
                                    android:textColor="@color/text_color_primary" />

                                <CheckBox
                                    android:id="@+id/check_cuisines"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:visibility="gone" />
                            </RelativeLayout>


                        </android.support.v7.widget.CardView>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05" />

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.3">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/common_dimens_10">

                                    <ImageView
                                        android:layout_width="@dimen/common_dimens_24"
                                        android:layout_height="@dimen/common_dimens_24"
                                        android:layout_above="@+id/txt_food"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_food" />

                                    <TextView
                                        android:id="@+id/txt_food"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center_horizontal"
                                        android:padding="@dimen/common_dimens_5"
                                        android:text="@string/food"
                                        android:textColor="@color/text_color_primary" />

                                    <CheckBox
                                        android:id="@+id/check_food"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentTop="true"
                                        android:visibility="gone" />
                                </RelativeLayout>

                                <!--<ImageView
                                    android:layout_width="@dimen/common_dimens_20"
                                    android:layout_height="@dimen/common_dimens_20"
                                    android:src="@drawable/ic_food"
                                    android:layout_gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/common_dimens_10"
                                    android:gravity="center_horizontal"
                                    android:padding="@dimen/common_dimens_20"
                                    android:text="@string/food"
                                    android:textColor="@color/text_color_primary"/>

                                <CheckBox
                                    android:id="@+id/check_food"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end" />-->

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <!--<LinearLayout
        style="@style/Widget.Design.BottomSheet.Modal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/apply_filters"
            android:textColor="@color/text_color_primary" />
    </LinearLayout>-->
</android.support.design.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="com.snapxeats.ui.restaurantInfo.RestaurantInfoActivity">

    <LinearLayout
        android:id="@+id/restaurant_info_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto-Medium"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_rest_info"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="?attr/actionBarSize"
                android:gravity="center"
                android:text="@string/toolbar_rest_info"
                android:textColor="@color/colorCuisine"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_rest_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_rest_details_img_height"
            android:background="@color/text_color_primary" />

        <LinearLayout
            android:id="@+id/layout_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_dimens_10"
            android:layout_marginTop="@dimen/common_dimens_5"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/txt_rest_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_15"
            android:textColor="@color/colorCuisine"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_rest_info_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_10"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_rest_info_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimens_1"
            android:layout_margin="@dimen/common_dimens_15"
            android:background="@color/colorLightGrey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:text="@string/rest_info_aminities"
            android:textColor="@color/colorCuisine"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <ListView
            android:layout_marginStart="@dimen/common_dimens_20"
            android:id="@+id/listview_rest_aminities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimens_1"
            android:layout_margin="@dimen/common_dimens_15"
            android:background="@color/colorLightGrey" />

        <TextView
            android:id="@+id/txt_photo_taken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_dimens_20"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:textColor="@color/colorCuisine"
            android:textSize="@dimen/text_size_14"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>
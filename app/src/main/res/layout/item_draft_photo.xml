<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimens_20"
    android:layout_marginRight="@dimen/dimens_20"
    android:layout_marginTop="@dimen/common_dimens_10"
    android:layout_marginBottom="@dimen/common_dimens_10"
    card_view:elevation="@dimen/common_dimens_10"
    card_view:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/common_dimens_10"
    card_view:cardBackgroundColor="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_restaurant"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_restaurant_placeholder"
            android:src="@drawable/ic_restaurant_placeholder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_rest_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.87"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_16"
            android:text="@string/restaurant_name"
            android:padding="@dimen/common_dimens_10"
            android:textColor="@color/text_color_primary"/>
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/common_dimens_0"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.13"
            android:padding="@dimen/common_dimens_10"
            android:src="@drawable/ic_dir_share"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
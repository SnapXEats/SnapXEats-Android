<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="Roboto-Medium"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/common_dimens_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common_dimens_20"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_dimens_20"
                    android:src="@drawable/ic_cuisine_marker" />

                <TextView
                    android:id="@+id/txt_place_name"
                    android:layout_width="@dimen/common_dimens_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_dimens_10"
                    android:layout_weight="0.45"
                    android:text="@string/select_location"
                    android:textColor="@color/colorCuisine"
                    android:textSize="@dimen/text_size_16"
                    android:ellipsize="end"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_cuisine_done"
                android:layout_width="@dimen/common_dimens_0"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:gravity="end"
                android:text="@string/done"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_dimens_5"
        android:padding="@dimen/common_dimens_10"
        android:text="@string/select_cuisines"
        android:textColor="@color/colorCuisine"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dimens_10"
        android:layout_marginLeft="@dimen/common_dimens_10"
        android:layout_marginRight="@dimen/common_dimens_10"
        android:scrollbars="vertical" />
</LinearLayout>

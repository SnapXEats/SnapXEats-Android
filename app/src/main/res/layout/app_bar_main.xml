<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="Roboto-Medium"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CustomAppBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dimens_40dp"
                    android:drawableEnd="@drawable/ic_location_arrow"
                    android:drawablePadding="@dimen/common_dimens_10"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="@string/select_location"
                    android:textColor="@color/colorCuisine"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_cuisine_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="@dimen/common_dimens_20"
                    android:layout_marginTop="@dimen/common_dimens_20"
                    android:gravity="end"
                    android:text="@string/done"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_dimens_5"
        android:padding="@dimen/common_dimens_10"
        android:text="@string/select_cuisines"
        android:textColor="@color/colorCuisine"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_dimens_10"
        android:layout_marginLeft="@dimen/common_dimens_10"
        android:layout_marginRight="@dimen/common_dimens_10"
        android:scrollbars="vertical" />
</LinearLayout>

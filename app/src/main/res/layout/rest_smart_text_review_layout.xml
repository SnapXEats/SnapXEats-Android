<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/common_dimens_20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_review"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/text_size_18"
            android:layout_margin="@dimen/common_dimens_20"/>
        <TextView
            android:id="@+id/txt_review_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/common_dimens_5"
            android:layout_margin="@dimen/common_dimens_20"/>
        <Button
            android:id="@+id/btn_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/custom_button_selected"
            android:paddingLeft="@dimen/dimens_50dp"
            android:paddingRight="@dimen/dimens_50dp"
            android:text="@string/okay"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/common_dimens_20"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
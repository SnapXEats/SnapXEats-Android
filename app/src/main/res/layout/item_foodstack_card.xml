<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="@dimen/common_dimens_10"
    app:cardBackgroundColor="@color/colorLightGrey"
    app:contentPaddingBottom="@dimen/common_dimens_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOffWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/txt_card_rest_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/common_dimens_10"
            android:layout_marginStart="@dimen/common_dimens_10"
            android:layout_marginTop="@dimen/common_dimens_5"
            android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
                android:id="@+id/txt_card_rest_name"
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/common_dimens_10"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</android.support.v7.widget.CardView>
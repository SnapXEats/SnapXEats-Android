<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_cuisine_pref"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_dimens_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cuisine_pref"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_snapx_launcher" />

            <TextView
                android:id="@+id/txt_cuisine_pref_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_cuisine_pref"
                android:layout_gravity="start"
                android:padding="@dimen/common_dimens_10"
                android:gravity="center_vertical"
                android:text="American"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/common_dimens_10"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/img_cuisine_pref"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>
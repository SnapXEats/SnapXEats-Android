<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_cuisine_pref"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_dimens_5">

    <LinearLayout
        android:id="@+id/layout_cuisine_pref_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cuisine_pref"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_snapx_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_cuisine_pref_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_gravity="start"
                android:padding="@dimen/common_dimens_10"
                android:gravity="center_vertical"
                android:text="American"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_status"
                android:layout_weight="0.1"
                android:layout_width="@dimen/common_dimens_30"
                android:layout_height="@dimen/common_dimens_40"
                android:src="@drawable/ic_like_pref"
                android:layout_gravity="center"
                android:padding="@dimen/common_dimens_10"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
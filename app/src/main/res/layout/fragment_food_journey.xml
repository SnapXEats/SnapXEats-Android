<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="Roboto-Medium"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CustomAppBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="?attr/actionBarSize"
                        android:gravity="center"
                        android:text="@string/food_journey"
                        android:textColor="@color/colorCuisine"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <TextView
                android:id="@+id/txt_this_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_dimens_20"
                android:layout_marginTop="@dimen/common_dimens_10"
                android:text="@string/this_week"
                android:textColor="@color/colorDarkerGrey"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/list_current_food_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dimens_10"
                android:divider="@null"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/txt_older_journey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_dimens_20"
                android:text="@string/Older"
                android:textColor="@color/colorDarkerGrey"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/list_older_food_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_dimens_10"
                android:divider="@null"
                android:orientation="vertical" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>
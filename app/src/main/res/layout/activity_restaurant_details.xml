<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/restaurant_details_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto-Medium"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_rest_details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="?attr/actionBarSize"
                android:gravity="center"
                android:text="@string/toolbar_rest_details"
                android:textColor="@color/colorCuisine"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_rest_details_img_height"
            android:background="@color/text_color_primary" />

        <LinearLayout
            android:id="@+id/layout_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_dimens_10"
            android:layout_marginTop="@dimen/common_dimens_5"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/txt_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_15"
            android:textColor="@color/colorCuisine"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_restaurant_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_10"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinner_rest_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginStart="@dimen/common_dimens_20"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_rest_call"
                    android:layout_width="@dimen/dimens_50dp"
                    android:layout_height="@dimen/dimens_50dp"
                    android:src="@drawable/ic_rest_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/common_dimens_5"
                    android:text="@string/call"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_dimens_20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_rest_directions"
                    android:layout_width="@dimen/dimens_50dp"
                    android:layout_height="@dimen/dimens_50dp"
                    android:src="@drawable/ic_rest_direction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/common_dimens_5"
                    android:text="@string/directions"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_uber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_50dp"
            android:layout_marginTop="@dimen/common_dimens_10"
            android:background="@color/colorUber"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_uber"
                android:layout_width="@dimen/common_dimens_20"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_uber" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_uber"
                android:layout_marginStart="@dimen/common_dimens_20"
                android:layout_toEndOf="@+id/img_uber"
                android:text="@string/get_uber_ride"
                android:textColor="@color/colorCuisine"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_google_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/common_dimens_20"
                android:textColor="@color/colorCuisine"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_15"
            android:text="@string/check_specialties"
            android:textColor="@color/colorCuisine"
            android:textSize="@dimen/text_size_14" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_115"
            android:layout_marginBottom="@dimen/common_dimens_20"
            android:layout_marginLeft="@dimen/common_dimens_20"
            android:layout_marginRight="@dimen/common_dimens_20"
            android:layout_marginTop="@dimen/common_dimens_10"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/layout_rest_specialties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>